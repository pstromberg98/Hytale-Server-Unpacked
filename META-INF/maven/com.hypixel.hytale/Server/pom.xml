                </property>
            </activation>
            <properties>
                <hytale.patchline>${hytale.patchline}</hytale.patchline>
            </properties>
        </profile>
        <profile>
            <id>patchline-undefined</id>
            <activation>
                <property>
                    <name>!hytale.patchline</name>
                </property>
            </activation>
            <properties>
                <hytale.patchline>dev</hytale.patchline>
            </properties>
        </profile>
    </profiles>
